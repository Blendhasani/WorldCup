    max-width: 2188vmax;
}
.container-fluid{
--mdb-gutter-x: 0rem;
}
.container {
  
    padding-right: 0px ; 
    padding-left: 0px ;
  
    
}

    .pb-3{
        margin-top: 72px !important ;
    }
	.texti{
		weight:800;color: white;text-shadow: 3px 3px #000
	}

   </style>