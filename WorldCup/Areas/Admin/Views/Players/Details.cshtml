@using WorldCup.Areas.Admin.Models;

@model Player

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div style="padding-top:3%;">

	<h2 style="font-family:Qatar; margin-bottom:5%;display: flex;
  justify-content: center;">
		@Model.FullName @Model.Surname
	</h2>
	<div style=" display: flex; flex-direction:column;
  justify-content: center; ">
		<img style=" display: block;
  margin-left: auto;
  margin-right: auto;
  width: 30%;
" src="@Model.ProfilePictureURL" />
		<p style=" display: block;
  margin-left: auto;
  margin-right: auto;
  margin-top:3%;"><b>@Model.Birthday.ToString("dd MMM yy")</b></p>

	</div>



	
	<p style="font-size:20;font-family:Google Sans,arial,sans-serif;margin-top:5%;"><i>@Model.Bio</i></p>
	<div style="display:flex;flex-direction:row;justify-content:space-evenly;margin-top:5%;">
		<h5>
			Current Club : @Model.Club.Name
		</h5>
		<img src="@Model.Club.LogoUrl" style="height:60px;width:60px;" />
	</div>
	

</div>